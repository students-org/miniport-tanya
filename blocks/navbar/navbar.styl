.mainMenu
  margin 0
  @media all and (max-width:768px)
    display none
  &__item
    display inline-block
  &__button
    padding 0.4rem 1rem
    margin 0.6rem 0.2rem
    border-radius 0.35rem
    color white
    text-decoration none
    font-weight 600
