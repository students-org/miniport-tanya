.thumbnail
  background #fff
  margin-bottom 30px
  text-align center
  box-shadow 0 0 6px 2px lightgrey
  &__image
    width 100%
  &__caption
    font-weight 600
    font-size 1.6rem
    color #3E3E3E
    margin-bottom .5rem
  a
    text-decoration none
    transition .5s
    &:hover
      color #43B3E0
  &__description
    margin 0
    padding-bottom 2rem
    font-size 1.1rem
    font-weight 200
    color #888
